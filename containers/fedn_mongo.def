Bootstrap: docker
From: mongo:5.0.2

%arguments
    DB_PORT=6534

%environment
    export MONGO_INITDB_ROOT_USERNAME=fedn_admin
    export MONGO_INITDB_ROOT_PASSWORD=password

%startscript
    docker-entrypoint.sh mongod --port {{DB_PORT}}

%runscript
    docker-entrypoint.sh mongod --port {{DB_PORT}}
